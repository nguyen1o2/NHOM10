        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800" Loaded="Window_Loader" >
    <Grid RenderTransformOrigin="0.509,0.582">
        <DataGrid Margin="76,51,76,99" Name="dgvThongKe" AutoGenerateColumns="False" CanUserAddRows="False" AlternatingRowBackground="AntiqueWhite">
